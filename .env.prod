# .env.prod
# Production configuration (non-secret settings)
# Edit this file to change application behaviour without touching secrets
# After editing, restart: docker compose restart alerts

# ============================================================================
# Scheduler Settings
# ============================================================================
# Check frequency in hours (floats allowed)
SCHEDULE_FREQUENCY=0.008

# Days before sending reminder about same event
REMINDER_FREQUENCY_DAYS=3

# ============================================================================
# Notification Recipients (comma-separated emails)
# ============================================================================
INTERNAL_RECIPIENTS=data@prominencemaritime.com
PROMINENCE_EMAIL_RECIPIENTS=skliros@quantsuite.io
#safety@prominencemaritime.com
SEATRADERS_EMAIL_RECIPIENTS=dp.skliros@gmail.com
#safety@seatraders.com

# ============================================================================
# Notification Settings
# ============================================================================
ENABLE_EMAIL_ALERTS=true
ENABLE_TEAMS_ALERTS=false
ENABLE_SPECIAL_TEAMS_EMAIL_ALERT=false

# ============================================================================
# Query Parameters
# ============================================================================
SQL_QUERY_FILE=EventHotWorksDetails.sql
SQL_TYPE_AND_STATUS_FILE=TypeAndStatus.sql
EVENT_TYPE_ID=18
EVENT_STATUS_ID=6
EVENT_NAME_FILTER=hot
EVENT_EXCLUDE=vessel
EVENT_LOOKBACK_DAYS=300
SPECIAL_TEAMS_EMAIL=channel@emea.teams.ms

# ============================================================================
# URLs
# ============================================================================
EVENTS_BASE_URL=https://prominence.orca.tools/events

# ============================================================================
# Logging
# ============================================================================
LOG_FILE=events_alerts.log
LOG_MAX_BYTES=10485760
LOG_BACKUP_COUNT=5

# ============================================================================
# Docker Environment Indicator
# ============================================================================
DOCKER_ENV=true

# ============================================================================
# Connection Settings
# ============================================================================
USE_SSH_TUNNEL=false

# ============================================================================
# Stylistic Choices
# ============================================================================
COMPANY_NAME=Prominence Maritime S.A.
COMPANY_LOGO=trans_logo_prominence_procreate_small.png
ST_COMPANY_LOGO=trans_logo_seatraders_procreate_small.png

# Color Conventions
LIGHT_BLUE_PROMINENCE=#2EA9DE
DARK_BLUE_PROMINENCE=#1A2440
DARK_BLUE_WINGU=#0B4877
