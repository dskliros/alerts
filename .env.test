# .env.test
# Test environment configuration for pytest
# These are dummy values used only for testing

# SSH Configuration (optional for tests)
SSH_HOST=test.example.com
SSH_PORT=22
SSH_USER=testuser
SSH_KEY_PATH=/tmp/test_key
USE_SSH_TUNNEL=False

# Database Configuration (required)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=test_db
DB_USER=test_user
DB_PASS=test_password

# SMTP Configuration
SMTP_HOST=localhost
SMTP_PORT=25
SMTP_USER=test@example.com
SMTP_PASS=test_password

# Teams Configuration
TEAMS_WEBHOOK_URL=https://example.com/webhook
